{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/app",
    "types": ["swiper"],
    "strict": true,
    "noImplicitAny": false
  },
  "angularCompilerOptions": {
    "strictTemplates": true,
    "schemas": ["CUSTOM_ELEMENTS_SCHEMA"]
  },

  "files": [
    "src/main.ts",
    "src/polyfills.ts"
  ],
  "include": [
    "src/**/*.d.ts",
    "src/**/*.ts"
  ]
}
